            label = "QWERTY";
            bindings = <
       &kp Q       &kp W            &kp E         &kp R        &kp T        &kp Y        &kp U             &kp I        &kp O                 &kp P
       &mt LGUI A  &mt LALT S       &mt LCTRL D   &mt LSHFT F  &kp G        &kp H        &mt LEFT_SHIFT J  &mt LCTRL K  &mt LEFT_ALT L        &mt LEFT_GUI SEMICOLON
